<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">

                <TextView
                    android:id="@+id/txt_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:weightSum="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>

                <AutoCompleteTextView
                    android:id="@+id/btn_branchcode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Code"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:gravity="center"
                    android:background="@drawable/border"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"></LinearLayout>

                <AutoCompleteTextView
                    android:id="@+id/btn_lrno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="LR NO."
                    android:paddingLeft="5dp"
                    android:inputType="number"
                    android:layout_weight="3.8"
                    android:gravity="center"
                    android:background="@drawable/border"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"></LinearLayout>

                <Button
                    android:id="@+id/btn_go"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Go"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:background="@color/button_background"
                    android:textColor="#FFFFFF"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"></LinearLayout>

                <!--<Button-->
                <!--android:id="@+id/btn_code"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="Code"-->
                <!--android:singleLine="true"-->
                <!--android:layout_weight="1.5"-->
                <!--android:background="@color/button_background"-->
                <!--android:textColor="#FFFFFF"-->
                <!--/>-->

                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="0.3"></LinearLayout>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:id="@+id/linear_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:visibility="gone"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/textviewlr"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="LR No"
                                android:layout_weight="1"
                                android:gravity="end|bottom"
                                android:textColor="@color/textcolor"
                                android:paddingBottom="3dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/textviewfrombranch"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="From Branch"
                                android:layout_weight="1"
                                android:gravity="end|bottom"
                                android:textColor="@color/textcolor"
                                android:paddingBottom="3dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/textviewtobranch"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="To Branch"
                                android:layout_weight="1"
                                android:gravity="end|bottom"
                                android:textColor="@color/textcolor"
                                android:paddingBottom="3dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Consinee Name"
                                android:layout_weight="1"
                                android:gravity="end|bottom"
                                android:textColor="@color/textcolor"
                                android:paddingBottom="3dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Total Package"
                                android:layout_weight="1"
                                android:gravity="end|bottom"
                                android:textColor="@color/textcolor"
                                android:paddingBottom="3dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Total Weight"
                                android:layout_weight="1"
                                android:gravity="end|bottom"
                                android:paddingBottom="3dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:textColor="@color/textcolor"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Qty"
                                android:layout_weight="1"
                                android:gravity="end|bottom"
                                android:textColor="@color/textcolor"
                                android:paddingBottom="3dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:layout_marginRight="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:orientation="vertical"
                            android:weightSum="7">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_lr"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPersonName"
                                    android:layout_marginRight="5dp"
                                    android:gravity="bottom"
                                    android:clickable="true"
                                    android:maxLength="50"
                                    android:textColor="@color/black"
                                    android:focusable="false"
                                    android:backgroundTint="@color/black"
                                    android:focusableInTouchMode="true"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_from_branch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPersonName"
                                    android:layout_marginRight="5dp"
                                    android:gravity="bottom"
                                    android:clickable="true"
                                    android:maxLength="50"
                                    android:textColor="@color/black"
                                    android:focusable="false"
                                    android:backgroundTint="@color/black"
                                    android:focusableInTouchMode="true"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_to_branch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPersonName"
                                    android:layout_marginRight="5dp"
                                    android:gravity="bottom"
                                    android:clickable="true"
                                    android:maxLength="50"
                                    android:textColor="@color/black"
                                    android:focusable="false"
                                    android:backgroundTint="@color/black"
                                    android:focusableInTouchMode="true"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_consineename"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPersonName"
                                    android:gravity="bottom"
                                    android:layout_marginRight="5dp"
                                    android:maxLength="50"
                                    android:focusable="false"
                                    android:textColor="@color/black"
                                    android:backgroundTint="@color/black"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_totalpackage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:gravity="bottom"
                                    android:layout_marginRight="5dp"
                                    android:maxLength="12"
                                    android:focusable="false"
                                    android:textColor="@color/black"
                                    android:backgroundTint="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_totalweight"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="numberDecimal"
                                    android:gravity="bottom"
                                    android:layout_marginRight="5dp"
                                    android:maxLength="12"
                                    android:focusable="false"
                                    android:textColor="@color/black"
                                    android:backgroundTint="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_machineqty"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="numberDecimal"
                                    android:gravity="bottom"
                                    android:layout_marginRight="5dp"
                                    android:maxLength="10"
                                    android:focusable="false"
                                    android:textColor="@color/black"
                                    android:backgroundTint="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"></LinearLayout>

            <LinearLayout
                android:id="@+id/linear_camera"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:weightSum="2"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Capture"
                    android:layout_weight="0.8"
                    android:gravity="end|center"
                    android:paddingRight="10dp"
                    android:textColor="@color/textcolor"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/rect"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"/>

                            <ImageView
                                android:id="@+id/imageView_camera"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/camera"
                                android:padding="15dp"
                                android:layout_centerInParent="true"/>

                            <ImageView
                                android:id="@+id/imageView_set"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <ImageView
                            android:id="@+id/image_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_photo"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_centerInParent="true"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"></LinearLayout>

            <LinearLayout
                android:id="@+id/linear_submit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@color/button_background"
                        android:textColor="#FFFFFF"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_submit_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit &amp; Next"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@color/button_background"
                        android:textColor="#FFFFFF"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"></LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:contentDescription="Zoom Touch Close" />

    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>